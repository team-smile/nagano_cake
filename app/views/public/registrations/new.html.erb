<div class="container">
  <div class="row">
    <div class="col-lg-8">
    <h2 class="mypage-edit"><b>新規登録 <span class="glyphicon glyphicon-edit" aria-hidden="true"></span></b></h2>

    <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
　　　<div class="profile-edit">
      <div class="form-group">
        <label>名前   </label>
        <label>フリガナ　　　</label>
        <%= f.label :email, "メールアドレス" %>
        <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
        <%= f.label :address, "住所" %>
        <%= f.label :telphone_number, "電話番号（ハイフンなし）" %></br>
        <%= f.label :password, "パスワード（６文字以上）" %>
        <%= f.label :password_confirmation, "パスワード（確認用）" %>
      </div>
      
      <div class="form-group">
        <%= f.label :last_name, "（姓）" %>
        <%= f.label :last_name_kana, "セイ" %>
      </div>
      
      <div class="form-group">
        <%= f.text_field :last_name %>
        <%= f.text_field :last_name_kana %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= f.text_field :postal_code, id: "customer_postal_code" %>
        <%= f.text_field :address, id: 'customer_address' %>
        <%= f.text_field :telphone_number %>
        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      
      <div class="form-group">
        <%= f.label :first_name, "（名）" %>
        <%= f.label :first_name_kana, "メイ" %>
      </div>
      
      <div class="form-group">
        <%= f.text_field :first_name_kana %>
        <%= f.text_field :first_name %>
      </div>
      </div>

      <div class="edit-buttons">
        <p><%= f.submit "新規登録", class: "btn btn-primary" %></p>
      </div>
      
    <% end %>
    
    <div class="row">
    <h2>既に登録済みの方</h2>
    <p>
      <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
    </p>
  </div>
    
    </div>
  </div>

  

</div>