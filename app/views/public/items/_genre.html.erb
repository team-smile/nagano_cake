<div class="genre-search">
  <table class="genre-index">
    <thead>
      <tr>
        <th class="genre-index1">ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
      <% genres.each do |genre| %>
        <tr>
          <td class="genre-index2">
            <%= link_to genre.name, genre_path(genre), class:"genre-link" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>