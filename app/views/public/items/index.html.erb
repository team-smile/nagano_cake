<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <%= render "genre", genres: @genres %>
      </div>
      <div class="col-lg-9">
        <h2 class="item-head"><b>商品一覧</b></h2>
          <div class="item-count">全<%= @items.count %>件</div>
            <div class="item-lists">
              <% @items.each do |item| %>
                <div class="col-2 ">
                  <div class="card-image">
                    <figure class="image">
                      <%= link_to item_path(item) do %>
                        <%= attachment_image_tag item, :image, :size =>'250x250' %>
                      <% end %>
                    </figure>
                  </div>
                  <div class="card-name">
                    <div class="item-name"><%= link_to item.name, item_path(item) %></div>
                  </div>
                  <div class="card-price">
                    <div class="item-price">¥<%= item.price %></div>
                  </div>
                </div>
              <% end %>
            </div>
      </div>
    </div>
  </div>
</body>
