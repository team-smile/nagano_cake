<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <h2 class="title"><b>注文履歴詳細</b><i class="fas fa-info-circle"></i></h2>
      <h4><b>注文情報</b></h4>
      <table border="1">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>支払方法</th>
          <th>ステータス</th>
        </tr>
        <tr>
          <td>
            <%= @order.created_at.strftime("%Y-%m-%d %H:%M") %>
          </td>
          <td>〒<%= @order.postal_code %> <%= @order.address %> <%= @order.name %></td>
          <td><%= @order.payment_method %></td>
          <td><%= @order.status %></td>
        </tr>
      </table>
      <h4><b>注文内容</b></h4>
      <table border="1">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
         <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td class="item-taxed_price"><%= addTax(order_detail.item.price,@rate) %></td>
            <td>
              <%= order_detail.amount %>
            </td>
            <td><%= addTax((order_detail.item.price * order_detail.amount),@rate) %></td>
          </tr>
          <% @sum += order_detail.item.price * order_detail.amount %>
         <% end %>
        </tbody>
      </table>
      <h4><b>請求内容</b></h4>
      <table border="1">
        <tr>
          <th>商品合計</th><td>¥<%= (@sum * @rate ).round %>(税込)</td>
          <th>配送料</th><td>¥<%= @postage %></td>
          <th>御請求額</th><td><b>¥<%= (@sum * @rate ).round + @postage %></b></td>
        </tr>
      </table>
      <%= link_to "注文履歴一覧に戻る", orders_path %>
    </div>
  </div>
</div>