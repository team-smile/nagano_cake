<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <h2>ショッピングカート</h2>
        <table border="1">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= attachment_image_tag cart_item.item, :image, :size =>'150x150' %><%= cart_item.item.name %></td>
              <td class="item-price"><%= addTax(cart_item.item.price,1.1) %></td>
              <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
                  <%= f.text_field :amount %><%= f.submit "変更", class: "btn btn-primary" %>
                <% end %>
              </td>
              <td><%= addTax((cart_item.item.price * cart_item.amount),1.1) %></td>
              <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, data: {confirm: "この商品を削除しますか？"}, class: "btn btn-danger" %></td>
            </tr>
            <!--カートの小計と個数と税率をかけたものを初期値0に足す-->
            <% @sum += cart_item.item.price * cart_item.amount %>
            <% end %>
          </tbody>
        </table>
        <p class="cotinue-shopping"><%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %></p>
        <table class="total-price", border="1">
          <tr>
            <td>合計金額</td><td>¥<%= (@sum * 1.1).round %>(税込)</td>
          </tr>
        </table>
        <p><%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %></p>
        <div class="all-delete">
          <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, data: {confirm: "カート内商品を全て削除しますか？"}, class: "btn-sm btn-danger" %>
        </div>
      </div>
    </div>
  </body>
</body>