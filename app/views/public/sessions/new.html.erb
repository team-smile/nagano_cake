<div class="row">

    
    
    <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
      <div class="login-form">
    
      <%= render "public/shared/error_messages", resource: resource %>
      
      <div class="form-group">
        <h4 class="form-box"><b>会員の方はこちらからログイン</b></h4>
        <%= f.label :email, "メールアドレス" %>
        <%= f.label :password, "パスワード" %>
      </div>
      
      <div class="form-group">
        <%= f.email_field :email, autofocus: true %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      
      <div>
        <%= link_to "=> パスワードを忘れた方はこちら", new_customer_password_path %>
      </div>
      
      <%= f.submit "ログイン", class: "btn" %>
      
      </div>
    <% end %>
    
  <div>
    <h2>登録がお済みでない方</h2>
    <p>
      <%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください。
    </p>

</div>


