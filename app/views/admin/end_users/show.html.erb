<h2><%= @end_user.last_name %><%= @end_user.first_name %>さんの会員詳細</h2>

<table>
  <tr>
    <td>顧客ID</td>
    <td><%= @end_user.id %> <%= @end_user.is_deleted == true ? '有効':'退会済' %>会員</td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @end_user.last_name %>  <%= @end_user.first_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= @end_user.last_name_kana %>  <%= @end_user.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @end_user.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @end_user.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @end_user.telphone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @end_user.email %></td>
  </tr>
</table>

<%= link_to "編集する", edit_admin_end_user_path(@end_user) %> <%= link_to "注文履歴一覧を見る", admin_orders_path %>