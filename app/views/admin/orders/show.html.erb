<h1>注文履歴詳細</h1>

<table>
  <tbody>
      <tr>
        <td>購入者</td>
        <td>
          <%= link_to admin_end_user_path() do %>
            "@order.customer.last_name""@order.customer.first_name"
          <% end %>
        </td>
      <tr>
      <tr>
        <td>配送先</td>
        <td><%= @order.address %></td>
      <tr>
    　<tr>
        <td>支払方法</td>
        <td><%= @order.payment_method %></td>
      <tr>
    　<tr>
        <td>支払ステータス</td>
        <td>
          <%= form_with model:@order, url:admin_order_path(@order) ,local: true do |f| %>
            <%= f.select :status, options_for_select(Order.statuses.keys), {} %>
            <%= f.submit "更新" %>
          <% end %>
          <%= @order.status %>
        </td>
      <tr>
           
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
      <td>制作ステータス</td>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.name %></td>
      <td>" order.order_details.price.to_s(:delimited) "</td></td>
      <td>" order.order_details.amount "</td></td>
      <td>" order.order_details.making_status "</td>
      <td>
        <%= form_with model:@order, url:admin_order_path(order) ,local: true do |f| %>
          <%= f.select :making_status, options_for_select(OrderDetail.making_statuses) %>
          <%= f.submit "更新" %>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>

<table>
  <tbody>
    <tr>
      <td>商品合計</td>
      <td>"@order.order_detail.price*@order.order_detail.amount"</td>
    </tr>
    <tr>
      <td>送料</td>
      <td>< @order.shipping_cost </td>
    </tr>
    <tr>
      <td>請求金額合計</td>
      <td><%= @order.total_payment.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>