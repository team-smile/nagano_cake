<div class="container">
  <h1 class="item-header">商品詳細</h1>

  <div class="row">
    <div class="col-xs-4">
      <p class="text-right"><%= attachment_image_tag @item, :image, format: "jpeg", size: "250x200" %></p>
    </div>

    <div class="col-xs-6">
      <table class="table">
        <tr>
          <td class="col-xs-3">商品名</td>
          <th class="col-xs-9"><%= @item.name %></th>
        </tr>
        <tr>
          <td>商品説明</td>
          <th><%= @item.introduction %></th>
        </tr>
        <tr>
          <td>ジャンル</td>
          <th><%= @item.genre.name %></th>
        </tr>
        <tr>
          <td>税込価格</br>（税抜価格）</td>
          <th><%= @tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</th>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <th><%= @item.is_active == true ? "販売中":"販売停止中" %></th>
        </tr>
      </table>
      <p class="text-right"><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary item-submit" %></p>
    </div>

    <div class="col-xs-2"></div>
  </div>
</div>