<table class="table">
  <thead class="thead-light">
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.is_active == true ? "有効":"無効" %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>